@model IEnumerable<BookViewModel>
@{
    ViewData["Title"] = "Kitap Listesi";
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Kitaplar</h2>
    <a class="btn btn-success" asp-action="Create">Yeni Kitap</a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Başlık</th>
            <th>Yazar</th>
            <th>Tür</th>
            <th>Yayın Tarihi</th>
            <th>ISBN</th>
            <th>Stok</th>
            <th class="text-end">İşlemler</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var b in Model)
    {
        <tr>
            <td>@b.Title</td>
            <td>@b.AuthorFullName</td>
            <td>@b.Genre</td>
            <td>@b.PublishDate.ToString("dd.MM.yyyy")</td>
            <td>@b.ISBN</td>
            <td>@b.CopiesAvailable</td>
            <td class="text-end">
                <a class="btn btn-sm btn-primary" asp-action="Details" asp-route-id="@b.Id">Detay</a>
                <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@b.Id">Düzenle</a>
                <form asp-action="DeleteFromList" method="post" class="d-inline">
                    <input type="hidden" name="id" value="@b.Id" />
                    <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Silmek istediğinize emin misiniz?')">Sil</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>
