@model LibraryMVC.Models.Author
@{
    ViewData["Title"] = "Yazar Sil";
}
<h2>Yazarı Sil</h2>
<p>Bu yazarı silmek istediğinize emin misiniz?</p>
<dl class="row">
    <dt class="col-sm-3">Ad</dt><dd class="col-sm-9">@Model.FirstName</dd>
    <dt class="col-sm-3">Soyad</dt><dd class="col-sm-9">@Model.LastName</dd>
</dl>
<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Sil</button>
    <a asp-action="List" class="btn btn-secondary">İptal</a>
</form>
